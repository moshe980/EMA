<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activitys.Menu">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/new_form"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="פתיחת 1007 חדש"
        android:background="#3379FF"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/waitingConfirmation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#3379FF"
        android:text="1007 ממתינים לאישור"
        android:textColor="@android:color/white"
        android:textSize="25dp" />
    <Button
        android:id="@+id/table_tracking"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#3379FF"
        android:text="יומן מעקב"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/history"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#3379FF"
        android:text="תיקי עבודה"
        android:textColor="@android:color/white"
        android:textSize="30dp" />


</LinearLayout>