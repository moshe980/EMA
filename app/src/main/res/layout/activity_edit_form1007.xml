<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pop_bg"
    tools:context=".activitys.EditForm1007"
>

    <TextView
        android:id="@+id/equipmentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textSize="20dp">

    </TextView>

    <Button
        android:id="@+id/display1007"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#3379FF"
        android:text="הצג 1007"
        android:textColor="@android:color/white"
        android:textSize="15dp" />
    <Button
        android:id="@+id/increase1007"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#3379FF"
        android:text="הגדלת 1007"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/addFils"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#3379FF"
        android:text="הוספת מסמכים"
        android:textColor="@android:color/white"
        android:textSize="15dp" />
    <Button
        android:id="@+id/close1007"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#888888"
        android:text="סגירת 1007"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/confirm1007"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#3379FF"
        android:text="אישור"
        android:textColor="@android:color/white"
        android:textSize="15dp" />


</LinearLayout>